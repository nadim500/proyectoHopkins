doctype HTML
html
  head
    title Crear Cliente
    meta(charset="UTF-8")
    script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
    script(src="../js/semantic.min.js")
    link(rel="stylesheet" type="text/css" href="../css/semantic.min.css")
    style.
      body {
        padding: 1em 0em;
      }
      #breadcrumb{
        margin-top:7em;
      }
      .ui.grid{
        margin-top:3em;
        padding: 0em;
      }
      .ui.grid .row{
        margin-left:5em;
      }
  body
    .ui.fixed.inverted.menu
      .ui.container
        a.header.item
          img.logo(src="../css/logo.png")
          | Project Hopkins
        a.item(href="/principal") Home
        a.item Clientes
        a.item Vehiculos
        .ui.simple.dropdown.item Setting
          i.dropdown.icon
          .menu
            a.item(href="/administradorPrincipal") Administradores
            a.item(href="/clientePrincipal") Clientes
            a.item(href="/pedidoPrincipal") Pedidos
            a.item(href="/trabajadorPrincipal") Trabajadores
            a.item(href="/vehiculoPrincipal") Vehiculos


        .right.menu
          .item
            .ui.inverted.transparent.icon.input
              input(type='text' placeholder='search...')
              i.search.icon
          .item
            a.ui.red.inverted.button(href="/logout") Log Out

    .ui.container#breadcrumb
      .ui.huge.breadcrumb
        a.section(href="/principal") Home
          i.right.chevron.icon.divider
        a.section(href="/clientePrincipal") Setting
          i.right.chevron.icon.divider
        a.section(href="/administradorPrincipal") Cliente
          i.right.arrow.icon.divider
        .active.section Crear Cliente

    .ui.grid
      .ui.row
        .five.wide.column
          .ui.inverted.vertical.menu
            a.item(href="/administradorPrincipal") Administradores
            a.active.item(href="/clientePrincipal") Clientes
            a.item(href="/pedidoPrincipal") Pedidos
            a.item(href="/trabajadorPrincipal") Trabajadores
            a.item(href="/vehiculoPrincipal") Vehiculos
        .eleven.wide.column
          .ui.container
            form.ui.form(action="/nuevoCliente" method="post")
              .field
                .fields
                  .nine.wide.field
                    h3.ui.dividing.header Nuevo Cliente

              .field
                .fields
                  .nine.wide.field
                    .field
                      label Nombre: 
                      input#nombre(type="text" placeholder="nombre" name="nombreCliente")

              .field
                .fields
                  .nine.wide.field
                    .field
                      label Telefono: 
                      input#telefono(type="text" placeholder="telefono" name="telefonoCliente")

              .field
                .fields
                  .nine.wide.field
                    .field
                      label Direccion Inicial:
                      input#direccion(type="text" placeholder="direccion inicial" name="direccionCliente")
              input#ss(type="hidden" name="filtro" value="")
              a.ui.black.button(href="/clientePrincipal") Cancelar
              input.ui.black.button#solo_guardar(type="submit" value="Guardar")
              input.ui.blue.button#con_pedido(type="submit" value="Nuevo Pedido")

  script.
    $("#solo_guardar").on("click",function(){
      var a = true;
      $("#ss").attr("value",a);
    });
    $("#con_pedido").on("click",function(){
      var a = false;
      $("#ss").attr("value",a);
    })
  script.
    $(".form")
      .form({
        inline:true,
        on:'blur',
        fields:{
          nombre:{
            identifier : 'nombreCliente',
            rules:[{
              type:'empty',
              prompt: 'Ingrese un nombre'
            }]
          },
          telefono:{
            identifier : 'telefonoCliente',
            rules:[{
              type : 'integer',
              prompt : 'Ingrese un numero de telefono valido'
            }]
          },
          direccion:{
            identifier : 'direccionCliente',
            rules:[{
              type : 'empty',
              prompt : 'Ingrese una direccion valida'
            }]
          }
        }
      });

